<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="User">
    <select id="findByNickname" parameterType="String" resultType="user">
        select * from user_table where nickname = #{nickname}
    </select>

    <insert id="userSave" parameterType="user" useGeneratedKeys="true" keyProperty="id">
        insert into user_table (email,password,birth,nickname,agree_TOS,agree_PICU,agree_promotion)
            values (#{email},#{password},#{birth},#{nickname},#{agree_TOS},#{agree_PICU},#{agree_promotion})
    </insert>
</mapper>