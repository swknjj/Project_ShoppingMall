<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Product">
    <insert id="productSave" parameterType="product">
        insert into product_table (seller_id,category_id,brand,title,image,price,discount_rate,delivery_fee,special_price,product_detail)
            value(#{seller_id},#{category_id},#{brand},#{title},#{image},#{price},#{discount_rate},#{delivery_fee},#{special_price},#{product_detail})
    </insert>

    <select id="findCategory" parameterType="Long" resultType="product">
        select * from product_table where category_id = #{category_id}
    </select>

    <select id="findAll" resultType="product">
        select * from product_table;
    </select>

    <select id="total" resultType="int">
        select count(product_id) from product_table;
    </select>
</mapper>